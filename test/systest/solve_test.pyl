def alternatives(x):
 	r = 0
	if x == 0:
		r = 10
	elif x == 1:
		r = 20
	return r

def test_solve_cond_equation_0():
	x = free
	assert alternatives(x) == 10
	assert str(x) == "0"

def test_solve_cond_equation_1():
	x = free
	assert 20 == alternatives(x)
	assert str(x) == "1"

def fac(n):
	assert n >= 0
	c = 0
	if n == 0:
		c = 1
	else:
		c = n * fac(n - 1)
	return c

def test_solve_fac_equation():
	x = free
	assert 1307674368000 == fac(x)
	assert str(x) == "15"
